<Window x:Class="FileFolderPermissions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="355" Width="525">
    <Grid>
        <TextBox x:Name="Textbox_Browse_Path" HorizontalAlignment="Left" Height="25" Margin="25,50,0,0" TextWrapping="Wrap" Text="Path to Folder" VerticalAlignment="Top" Width="375"/>
        <Button x:Name="Button_Browse" Content="Browse" HorizontalAlignment="Left" Margin="415,50,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="Button_Browse_Click"/>
        <TextBox x:Name="Textbox_Browse_Log_Path" HorizontalAlignment="Left" Height="25" Margin="25,80,0,0" TextWrapping="Wrap" Text="Path to Log" VerticalAlignment="Top" Width="375"/>
        <Button x:Name="Button_Browse_Log" Content="Browse" HorizontalAlignment="Left" Margin="415,80,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="Button_Browse_Log_Click"/>
        <RichTextBox x:Name="RTextBox_Output" HorizontalAlignment="Left" Height="173" Margin="25,110,0,0" VerticalAlignment="Top" Width="465">
            <FlowDocument/>
        </RichTextBox>
        <Button x:Name="Button_Check_Path" Content="Check Path" HorizontalAlignment="Left" Margin="390,288,0,0" VerticalAlignment="Top" Width="100" Click="Button_Check_Path_Click"/>
    </Grid>
</Window>
